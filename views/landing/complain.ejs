<body id="top">
   <header>
   	<div class="header-logo">
	      <a href="http://localhost:3000/home">HIMS</a>
	   </div>		
	</header>
	<section id="home" >
   	<div class="overlay"></div>
 		<div class="home-content-table">	
		   <div class="home-content-tablecell">
		   	<div class="row">
		   		<div class="col-twelve" >		   						  		
			  				<label class="animate-intro" style="color: white; font-size: 30px;">FEEDBACK CENTRE<br></label>
				  			<div class="more animate-intro">
				  				<form method="POST">
				  					<input type="text" name="name" style="width: 50%; margin-left: 280px; color: white;" placeholder="Enter Your Name" required>	
					  				<label style="margin-left: 280px; color: white; opacity: 0.75; text-align: left;">Report On: </label>
					  				<select name="type" style="opacity: 0.75; width: 50%; margin-left: 280px; color: white;">
					  					<option>Staff</option>
					  					<option>Quality of Treatment</option>
					  					<option>Facilities</option>
					  					<option>Management</option>
					  					<option>Other</option>
					  				</select>
					  				<textarea name="desc" rows="3" cols="50" style="margin-left: 280px; color: white; resize: none;" placeholder="Brief Description" required></textarea>
					  				<button style="width: 20%; font-weight: bold; font-size: 15px;" type="SUBMIT" class="btn btn-outline-light">SUBMIT</button> 
					  				<button style="width: 20%; font-weight: bold; font-size: 15px;" type="RESET" class="btn btn-outline-light">RESET</button>
				  				</form>	
				  				<% if(error){ %>
				  					<div style="text-align: center;">
				  						<label style="color: white;">REPORT HAS BEEN SUBMITTED, THANK YOU FOR YOUR FEEDBACK.</label>
				  					</div>
				  				<% } %>
				  			</div>
			  		</div>
		   	</div>
		   </div> 		   
		</div>
   </section>
   <div id="go-top">
	   <a class="smoothscroll" title="Back to Top" href="#top">
	   	<i class="fa fa-long-arrow-up" aria-hidden="true"></i>
	   </a>
	</div>		
